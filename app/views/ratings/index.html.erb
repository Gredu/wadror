<h2>List of ratings</h2>

<div class="row">
    <div class="col-sm-4">
        <h3>Best beers</h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Average</th>
                </tr>
            </thead>

            <tbody>
                <% @top_beers.each do |beer| %>
                    <tr>
                        <td><%= link_to beer.name, beer %></td>
                        <td><%= round(beer.average_rating) %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
    <div class="col-sm-4">
        <h3>Best brewerie</h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Average</th>
                </tr>
            </thead>

            <tbody>
                <% @top_breweries.each do |brewery| %>
                    <tr>
                        <td><%= link_to brewery.name, brewery %></td>
                        <td><%= round(brewery.average_rating) %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
    <div class="col-sm-4">
        <h3>Best style</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>Most active users</h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Average</th>
                </tr>
            </thead>

            <tbody>
                <% @top_users.each do |user| %>
                    <tr>
                        <td><%= link_to user.username, user %></td>
                        <td><%= user.ratings.count %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>Recent ratings</h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Average</th>
                </tr>
            </thead>

            <tbody>
                <% @top_ratings.each do |rating| %>
                    <tr>
                        <td><%= link_to rating.beer.name, rating %></td>
                        <td><%= rating.score %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>

<%= link_to 'New rating', new_rating_path, class: 'btn btn-primary' %>
